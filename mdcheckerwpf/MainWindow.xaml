<Window x:Class="mdcheckerwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdcheckerwpf"
        mc:Ignorable="d" 
        Title="MainWindow" 
        Height="768" 
        Width="1024" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Foreground="White" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="{x:Null}">
    <Grid>
        
        <Border CornerRadius="6">
            <Border.Background>
                <ImageBrush ImageSource="Resources/backgroundimage.jpg"/>
            </Border.Background>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Athena"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="Black"
                       FontSize="36"
                       FontWeight="Medium"
                       Margin="20,0,0,0"
                       />

            <StackPanel Grid.Row="1">
                <StackPanel.Background>
                    <ImageBrush/>
                </StackPanel.Background>
                <RadioButton Content="Home"
                             IsChecked="True"
                             Height ="50"
                             Foreground="Black"
                             FontSize="14"
                             FontWeight="Bold"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Model check"
                             Height ="50"
                             Foreground="Black"
                             FontSize="14"
                             FontWeight="Bold"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Drawings check"
                             Height ="50"
                             Foreground="Black"
                             FontSize="14"
                             FontWeight="Bold"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Settings"
                             Height ="50"
                             Foreground="Black"
                             FontSize="14"
                             FontWeight="Bold"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Instructions"
                             Height ="50"
                             Foreground="Black"
                             FontSize="14"
                             FontWeight="Bold"
                             Style="{StaticResource MenuButtonTheme}"/>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
       

    
