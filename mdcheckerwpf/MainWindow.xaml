<Window x:Class="mdcheckerwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdcheckerwpf"
        mc:Ignorable="d" 
        Title="MainWindow" 
        Height="768" 
        Width="1024" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Foreground="White" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="{x:Null}">
    <Grid>
        
        <Border CornerRadius="6"  
                Background="White"/>

        <Grid>
            <Grid Width="60" HorizontalAlignment="Left"  Height="768">
                <Border Background="#FF2DA0FF" CornerRadius="6"/>

                <StackPanel Orientation="Vertical" Width="60" HorizontalAlignment="Left">
                    <Button Content="Г"  Click="Button_Click_2"/>
                    <Button Content="Ч"  Click="Button_Click" />
                    <Button Content="М"  Click="Button_Click_1"/>
                   
                </StackPanel>
            </Grid>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
       

    
