<Window x:Class="mdcheckerwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdcheckerwpf"
        mc:Ignorable="d" 
        Title="MainWindow" 
        Height="768" 
        Width="1024" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Foreground="#FF1B2627" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="{x:Null}" 
        FontFamily="Script MT Bold">

    <Grid>
        <Border CornerRadius="6" Background="White"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical"  
                        HorizontalAlignment="Left"
                        
                        VerticalAlignment="Stretch" 
                        Grid.Column="0" 
                        Grid.Row="0" 
                        Grid.RowSpan="2"  
                        Margin="10">

                <!-- Блок для логотипа с наклонными краями -->
                <Grid Width="150" Height="40" Margin="0,0,0,40">
                    <Path Fill="#FF213280" Data="M 0,0 L 150,-50 L 130,50 L 0,50 Z"/>
                    <TextBlock HorizontalAlignment="Left" 
                               Padding="5,0,20,0"
                               TextWrapping="Wrap" 
                               Text="Preview" 
                               VerticalAlignment="Center" 
                               FontSize="24" 
                               Foreground="White" 
                               FontFamily="/mdcheckerwpf;component/Fonts/#Inter" 
                               LineHeight="14"/>
                </Grid>

                <RadioButton Content="Начало" Checked="RadioButton_Checked" Foreground="Black" Style="{StaticResource MenuButtonTheme}" FontFamily="Roboto" Margin="-15,0,0,10" Cursor="Hand" GroupName="MenuButtons" Tag="HomePage" HorizontalContentAlignment="Left"/>
                <RadioButton Content="Модель" Foreground="Black" Checked="RadioButton_Checked" Style="{StaticResource MenuButtonTheme}" FontFamily="./#Inter Thin" Margin="-15,0,0,10" Cursor="Hand" GroupName="MenuButtons" Tag="ModelPage" HorizontalContentAlignment="Left"/>
                <RadioButton Content="Чертежи" Checked="RadioButton_Checked" Foreground="Black" Style="{StaticResource MenuButtonTheme}" FontFamily="./#Inter 28pt 28pt Light" Margin="-15,0,0,10" Cursor="Hand" GroupName="MenuButtons" Tag="DrawingsPage" HorizontalContentAlignment="Left"/>

                <StackPanel VerticalAlignment="Bottom" Margin="-15,0,0,10">
                    <RadioButton Content="Настройки" Checked="RadioButton_Checked" Foreground="Black" Style="{StaticResource MenuButtonTheme}" FontFamily="./#Inter Thin" Margin="0,400,0,10" Cursor="Hand" GroupName="MenuButtons" Tag="SettingsPage" HorizontalContentAlignment="Left"/>
                    <RadioButton Content="Помощь" Checked="RadioButton_Checked" Foreground="Black" Style="{StaticResource MenuButtonTheme}" FontFamily="./#Inter Thin" Cursor="Hand" GroupName="MenuButtons" Tag="HelpPage" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </StackPanel>

            <ContentControl x:Name="ContentArea" 
                            Grid.Row="0" 
                            Grid.Column="2" 
                            Grid.RowSpan="2"  
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Bottom" 
                            Width="874" 
                            Height="688"
                            Content="{Binding SelectedPage}"/>

            <Button x:Name="CloseButton" 
                    HorizontalAlignment="Right" 
                    Margin="10" 
                    VerticalAlignment="Top" 
                    Width="40" 
                    Height="40" 
                    BorderBrush="{x:Null}" 
                    Click="Button_Click" 
                    Cursor="Hand"
                    Grid.ColumnSpan="3">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" CornerRadius="20">
                            <Border x:Name="CloseBorder" Background="Transparent">
                                <Image x:Name="CloseImage" Source="Resources/closebutton.png"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseBorder" Property="Background" Value="#FF8F0101"/>
                                <Setter TargetName="CloseImage" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CloseImage" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
