<Window x:Class="mdcheckerwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdcheckerwpf"
        mc:Ignorable="d" 
        Title="MainWindow" 
        Height="768" 
        Width="1024" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Foreground="White" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="{x:Null}">
    <Grid>

        <Border CornerRadius="6" Background="#FFF7F7F7"/>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>




            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row ="0" Margin="0,0,0,0" Width="600" Height="40" MaxWidth="600" MaxHeight="40" MinWidth="100" MinHeight="40">
                <StackPanel.Background>
                    <ImageBrush Stretch="None"/>
                </StackPanel.Background>
                <RadioButton Content="Начало"
                             IsChecked="True"
                             Margin="0,0,25,0"
                             Height ="40"
                             Width="100"
                             Foreground="Black"
                             FontSize="16"
                             
                             Style="{StaticResource MenuButtonTheme}" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="./#Inter Thin"/>
                <RadioButton Content="Модель"
                             Height ="40"
                             Width="100"
                             Foreground="Black"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}" Background="{x:Null}" Margin="0,0,25,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="./#Inter Thin" />
                <RadioButton Content="Чертежи"
                             Height ="40"
                             Width="100"
                             Margin="0,0,25,0"
                             Foreground="Black"
                             FontSize="18"
                             Style="{StaticResource MenuButtonTheme}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="./#Inter 28pt 28pt Light" />
                <RadioButton Content="Настройки"
                             Height ="40"
                             Width="100"
                             Foreground="Black"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}" HorizontalAlignment="Center" Margin="0,0,25,0" VerticalAlignment="Center" RenderTransformOrigin="-0.027,0.5" FontFamily="./#Inter Thin"/>
                <RadioButton Content="Помощь"
                             Height ="40"
                             Width="100"
                             Foreground="Black"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="./#Inter Thin"/>

            </StackPanel>

            <Image HorizontalAlignment="Left" Height="688" VerticalAlignment="Top" Width="1024" Stretch="Fill" Grid.Row="1" Source="Resources/background3.png">
                <Image.Clip>
                    <RectangleGeometry RadiusX="6" RadiusY="6" Rect="0,0,1024,688"/>
                </Image.Clip>

            </Image>
            <TextBlock HorizontalAlignment="Left" Height="83" Margin="80,190,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Preview" VerticalAlignment="Top" Width="376" FontSize="72" Foreground="#FF4C557D" FontFamily="/mdcheckerwpf;component/Fonts/#Inter" LineHeight="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="80,292,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="74" Foreground="#FF4A4A4A" FontSize="16"><Run Text="Добро пожаловать в Preview — ваш помощник для удобной проверки моделей и чертежей "/><Run Text="созданных в"/><Run Text=" Tekla Structures."/></TextBlock>


        </Grid>
    </Grid>
</Window>
       

    
