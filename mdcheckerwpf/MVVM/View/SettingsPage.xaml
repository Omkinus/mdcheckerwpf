<UserControl x:Class="mdcheckerwpf.MVVM.View.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="854" Height="658">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          Color="#80000000"
                          BlurRadius="4"
                          ShadowDepth="0.2" />

        <!-- Стиль чекбокса для MainParts -->
        <Style x:Key="CheckboxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Rectangle x:Name="CheckboxBackground"
                                       Fill="Transparent"
                                       Stroke="#CCCCCC"
                                       StrokeThickness="1.5"
                                       RadiusX="6"
                                       RadiusY="6" />
                            <Path x:Name="CheckMark"
                                  Data="M 5 12 L 13 20 L 24 6"
                                  Stroke="White"
                                  StrokeThickness="4"
                                  Visibility="Collapsed"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TranslateTransform X="3" Y="4" />
                                </Path.RenderTransform>
                            </Path>
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckboxBackground"
                                        Property="Fill"
                                        Value="#FF3B82F6" />
                                <Setter TargetName="CheckMark"
                                        Property="Visibility"
                                        Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckboxBackground"
                                        Property="Stroke"
                                        Value="#888888" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CheckboxBackground"
                                        Property="Fill"
                                        Value="#4CAF50" />
                                <Setter TargetName="CheckboxBackground"
                                        Property="Stroke"
                                        Value="#FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border BorderBrush="White"
                Background="White"
                CornerRadius="8"
                Padding="24"
                Margin="24"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Общие настройки"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Margin="0,0,0,24" />

                <!-- Чекбокс Main Parts -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,32"
                            VerticalAlignment="Center">
                    <CheckBox x:Name="chkMainParts"
                              Style="{StaticResource CheckboxStyle}"
                              Checked="CheckBox_Toggled"
                              Unchecked="CheckBox_Toggled"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Проверять Main Parts в модели на наличие Single Part Drawing"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontFamily="Roboto"
                               Margin="16,0,0,0"
                               TextWrapping="Wrap"
                               Width="700" />
                </StackPanel>

                <!-- Группа радиокнопок -->
                <TextBlock Text="Стартовая страница:"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="0,0,0,12" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <RadioButton x:Name="rbStartModel"
                                 Content="Проверка модели"
                                 GroupName="StartPage"
                                 Checked="StartPage_Toggled"
                                 FontSize="18"
                                 Margin="0,0,40,0"
                                 VerticalAlignment="Center" />
                    <RadioButton x:Name="rbStartDrawings"
                                 Content="Проверка чертежей"
                                 GroupName="StartPage"
                                 Checked="StartPage_Toggled"
                                 FontSize="18"
                                 VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
