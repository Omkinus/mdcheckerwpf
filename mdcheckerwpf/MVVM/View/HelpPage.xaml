<UserControl x:Class="mdcheckerwpf.MVVM.View.HelpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <TextBlock Text="Помощь"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   Margin="0,20,0,20"/>

        <TextBlock Text="Содержание" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <ListView x:Name="HelpList" SelectionChanged="HelpList_SelectionChanged">
            <ListViewItem Content="Введение" Tag="Question1"/>
            <ListViewItem Content="Функции" Tag="Question2"/>
           
        </ListView>

        <!-- Площадка для отображения содержимого страниц -->
        <ContentControl x:Name="ContentArea" Margin="0,20,0,0"/>
    </Grid>
</UserControl>
